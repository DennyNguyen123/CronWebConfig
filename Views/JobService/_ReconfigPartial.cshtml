@model ReconfigModel

<div class="container">
    <div class="row">
        <div class="col">
            <form asp-action="Index" asp-controller="JobService">
                <div class="form-group mt-2">
                    @* <label asp-for="ServiceName" class="control-label"></label>
                    <input asp-for="ServiceName" class="form-control" readonly /> *@
                    @Html.LabelFor(p => p.ServiceName, new { @class = "control-label" })
                    @Html.TextBoxFor(p => p.ServiceName, new { @class = "form-control", @readonly = true })
                </div>
                <div class="form-group mt-3">
                    <label asp-for="IsRunOnStartup" class="control-label"></label>
                    @Html.CheckBoxFor(p => p.IsRunOnStartup, new { @class = "" })
                </div>

                <div class="form-group mt-2">
                    <label asp-for="JobDesc" class="control-label"></label>
                    <input asp-for="JobDesc" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Expression" class="control-label"></label>
                    <input asp-for="Expression" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <label asp-for="CronFormat" class="control-label"></label>
                    @* <input asp-for="CronFormat" class="form-control" list="CronFormatOptions" /> *@
                    <select asp-for="CronFormat" class="form-select">
                        <option value="Standard">Standard</option>
                        <option value="IncludeSeconds">IncludeSeconds</option>
                    </select>

                </div>
                <div class="form-group mt-2">
                    <label asp-for="TimeZone" class="control-label"></label>
                    <select asp-for="TimeZone" class="form-select">
                        <option value="Local">Local</option>
                        <option value="UTC">UTC</option>
                    </select>
                </div>

                <div class="form-group mt-3 d-flex flex-column">
                    <input type="submit" value="Change" asp-action="Reconfig" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>